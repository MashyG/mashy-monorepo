{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "composite": true,
    "types": ["vitest/importMeta"]
  }
}
